{
    "env": {
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "max-len": ["error", {
            "code": 120,
            "ignoreComments": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "linebreak-style": 0
    },
    "ignorePatterns": ["dist/**", "jest.config.js", "**/node_modules/**"]
}